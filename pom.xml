	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kie.management</groupId>
	<artifactId>asset-management</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>KIE Asset Management</name>
	<modules>
		<module>asset-management-extensions</module>
		<module>asset-management-test</module>
		<module>asset-management-kmodule</module>
	</modules>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.kie.management</groupId>
				<artifactId>asset-management-extensions</artifactId>
				<version>${version.org.kie.asset.management}</version>
			</dependency>
			<dependency>
				<groupId>org.kie.management</groupId>
				<artifactId>asset-management-kmodule</artifactId>
				<version>${version.org.kie.asset.management}</version>
			</dependency>
			<dependency>
				<groupId>org.kie.management</groupId>
				<artifactId>asset-management-test</artifactId>
				<version>${version.org.kie.asset.management}</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse.jgit</groupId>
				<artifactId>org.eclipse.jgit</artifactId>
				<version>${version.org.eclipse.jgit}</version>
			</dependency>

			<dependency>
				<groupId>org.kie</groupId>
				<artifactId>kie-api</artifactId>
				<version>${version.org.kie}</version>
			</dependency>

			<dependency>
				<groupId>org.kie</groupId>
				<artifactId>kie-internal</artifactId>
				<version>${version.org.kie}</version>
			</dependency>

			<dependency>
				<groupId>org.drools</groupId>
